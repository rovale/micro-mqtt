{
  "name": "micro-mqtt",
  "version": "0.0.16",
  "description": "An MQTT client for Espruino.",
  "main": "./modules/micro-mqtt.ts",
  "scripts": {
    "info": "npm-scripts-info",
    "pretest": "npm run clean && npm run tslint && npm run compile",
    "clean": "rimraf ./coverage ./bin",
    "tslint": "tslint ./src/**/*.ts",
    "compile": "tsc --pretty",
    "?test": "Run TSLint, compile TypeScript, run unit tests, and create coverage reports.",
    "test": "istanbul cover ./node_modules/mocha/bin/_mocha -- --reporter spec ./bin/test/*.js",
    "posttest": "npm run remap:lcov && npm run remap:html",
    "remap:lcov": "remap-istanbul --input coverage/coverage.json --type lcovonly --output coverage/lcov-ts.info",
    "remap:html": "remap-istanbul --input coverage/coverage.json --type html --output coverage/lcov-report-ts",
    "?test:watch": "Watch for changed compiled TypeScript files and perform unit tests. Press Ctrl-Shift-B in VSCode to compile TypeScript.",
    "test:watch": "mocha --watch ./bin/*/*.js",
    "?deploy": "Runs all tests and copies the micro-mqtt.js module to the Espruino Web IDE project.",
    "deploy": "npm run test && ncp ./bin/module/micro-mqtt.js ./espruino/modules/micro-mqtt.js && ncp ./bin/example/example.js ./espruino/projects/example.js",
    "?cleanall": "Removes the node_modules, all compiled TypeScript files, and coverage reports.",
    "cleanall": "rimraf ./coverage ./bin ./node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rovale/micro-mqtt.git"
  },
  "keywords": [
    "mqtt",
    "espruino"
  ],
  "author": "R. van Leuwen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rovale/micro-mqtt/issues"
  },
  "homepage": "https://github.com/rovale/micro-mqtt#readme",
  "devDependencies": {
    "@types/chai": "^3.4.33",
    "@types/mocha": "^2.2.32",
    "@types/sinon": "^1.16.30",
    "chai": "3.5.0",
    "coveralls": "2.11.15",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "ncp": "2.0.0",
    "npm-scripts-info": "0.3.6",
    "remap-istanbul": "0.9.3",
    "rimraf": "2.5.4",
    "sinon": "1.17.6",
    "tslint": "3.15.1",
    "tslint-microsoft-contrib": "2.0.14",
    "typescript": "2.1.4"
  }
}
